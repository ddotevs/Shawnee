<?xml version="1.0" encoding="utf-8" ?>
<!-- ************************************************************
     * DetailPanel.xml - Full-screen Item Detail View
     * Shows complete information for a selected item
     ************************************************************ -->

<component name="DetailPanel" extends="Group">
    <interface>
        <field id="itemData" type="assocarray" onChange="onItemDataChanged" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/DetailPanel.brs" />

    <children>
        <!-- Full screen overlay background -->
        <Rectangle
            id="panelBackground"
            width="1920"
            height="1080"
            color="#0f0f1a"
            opacity="0.97" />

        <!-- Close hint -->
        <Label
            id="closeHint"
            translation="[1750, 40]"
            text="âœ• BACK"
            font="font:SmallSystemFont"
            color="#666666" />

        <!-- Main Content Container -->
        <LayoutGroup
            id="mainContainer"
            translation="[100, 80]"
            layoutDirection="horiz"
            itemSpacings="[60]">

            <!-- Left Column: Image and Quick Info -->
            <LayoutGroup
                id="leftColumn"
                layoutDirection="vert"
                itemSpacings="[20]">

                <!-- Large Image -->
                <Rectangle
                    id="imageFrame"
                    width="500"
                    height="350"
                    color="#16213e"
                    cornerRadius="16">

                    <Poster
                        id="detailPoster"
                        width="460"
                        height="310"
                        translation="[20, 20]"
                        loadDisplayMode="scaleToZoom" />
                </Rectangle>

                <!-- Quick Info Cards -->
                <LayoutGroup
                    id="quickInfoGroup"
                    layoutDirection="vert"
                    itemSpacings="[10]">

                    <!-- Address Card -->
                    <Rectangle
                        id="addressCard"
                        width="500"
                        height="70"
                        color="#16213e"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="addressIcon"
                            translation="[15, 12]"
                            text="ðŸ“"
                            font="font:MediumSystemFont" />
                        <Label
                            id="addressLabel"
                            translation="[50, 15]"
                            width="430"
                            maxLines="2"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>

                    <!-- Phone Card -->
                    <Rectangle
                        id="phoneCard"
                        width="500"
                        height="50"
                        color="#16213e"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="phoneIcon"
                            translation="[15, 10]"
                            text="ðŸ“ž"
                            font="font:MediumSystemFont" />
                        <Label
                            id="phoneLabel"
                            translation="[50, 13]"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>

                    <!-- Hours Card -->
                    <Rectangle
                        id="hoursCard"
                        width="500"
                        height="50"
                        color="#16213e"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="hoursIcon"
                            translation="[15, 10]"
                            text="ðŸ•"
                            font="font:MediumSystemFont" />
                        <Label
                            id="hoursLabel"
                            translation="[50, 13]"
                            width="430"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>

                    <!-- Distance Card -->
                    <Rectangle
                        id="distanceCard"
                        width="500"
                        height="50"
                        color="#16213e"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="distanceIcon"
                            translation="[15, 10]"
                            text="ðŸš—"
                            font="font:MediumSystemFont" />
                        <Label
                            id="distanceLabel"
                            translation="[50, 13]"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>
                </LayoutGroup>
            </LayoutGroup>

            <!-- Right Column: Title, Description, Details -->
            <LayoutGroup
                id="rightColumn"
                layoutDirection="vert"
                itemSpacings="[15]">

                <!-- Title -->
                <Label
                    id="detailTitle"
                    width="1200"
                    font="font:LargeBoldSystemFont"
                    color="#e94560" />

                <!-- Short Description -->
                <Label
                    id="shortDescription"
                    width="1200"
                    font="font:MediumSystemFont"
                    color="#ffffff" />

                <!-- Price/Rating Row -->
                <LayoutGroup
                    id="metaRow"
                    layoutDirection="horiz"
                    itemSpacings="[30]">

                    <Label
                        id="priceLabel"
                        font="font:SmallBoldSystemFont"
                        color="#4ade80"
                        visible="false" />

                    <Label
                        id="ratingLabel"
                        font="font:SmallBoldSystemFont"
                        color="#fbbf24"
                        visible="false" />

                    <Label
                        id="reservationLabel"
                        font="font:SmallSystemFont"
                        color="#f87171"
                        visible="false" />
                </LayoutGroup>

                <!-- Divider -->
                <Rectangle
                    id="divider"
                    width="1150"
                    height="1"
                    color="#333333" />

                <!-- Full Description -->
                <Label
                    id="fullDescription"
                    width="1150"
                    maxLines="6"
                    font="font:SmallSystemFont"
                    color="#cccccc"
                    wrap="true" />

                <!-- Tips Section -->
                <Rectangle
                    id="tipsCard"
                    width="1150"
                    height="80"
                    color="#1a3a2e"
                    cornerRadius="8"
                    visible="false">
                    <Label
                        id="tipsIcon"
                        translation="[15, 15]"
                        text="ðŸ’¡ TIP"
                        font="font:SmallBoldSystemFont"
                        color="#4ade80" />
                    <Label
                        id="tipsLabel"
                        translation="[15, 40]"
                        width="1120"
                        maxLines="2"
                        font="font:SmallSystemFont"
                        color="#a7f3d0" />
                </Rectangle>

                <!-- Tags -->
                <Label
                    id="tagsLabel"
                    width="1150"
                    font="font:SmallestSystemFont"
                    color="#666666"
                    visible="false" />

                <!-- Scrollable Details Section -->
                <ScrollableText
                    id="detailsScroll"
                    width="1150"
                    height="300"
                    font="font:SmallSystemFont"
                    color="#aaaaaa"
                    visible="false" />
            </LayoutGroup>
        </LayoutGroup>
    </children>
</component>

