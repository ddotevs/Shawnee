<?xml version="1.0" encoding="utf-8" ?>
<!-- ************************************************************
     * DetailPanel.xml - Full-screen Item Detail View
     * Shows complete information for a selected item
     ************************************************************ -->

<component name="DetailPanel" extends="Group">
    <interface>
        <field id="itemData" type="assocarray" onChange="onItemDataChanged" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/DetailPanel.brs" />

    <children>
        <!-- Full screen overlay background -->
        <Rectangle
            id="panelBackground"
            width="1920"
            height="1080"
            color="#0f0f1a"
            opacity="0.97" />


        <!-- Close hint -->
        <Label
            id="closeHint"
            translation="[1750, 40]"
            text="BACK"
            font="font:SmallSystemFont"
            color="#666666" />

        <!-- Main Content Container -->
        <LayoutGroup
            id="mainContainer"
            translation="[100, 60]"
            layoutDirection="horiz"
            itemSpacings="[60]">

            <!-- Left Column: Image and Quick Info -->
            <LayoutGroup
                id="leftColumn"
                layoutDirection="vert"
                itemSpacings="[15]">

                <!-- Large Image -->
                <Rectangle
                    id="imageFrame"
                    width="450"
                    height="320"
                    color="#1e2a4a"
                    cornerRadius="12">

                    <Poster
                        id="detailPoster"
                        width="420"
                        height="290"
                        translation="[15, 15]"
                        loadDisplayMode="scaleToZoom" />
                </Rectangle>

                <!-- Quick Info Cards -->
                <LayoutGroup
                    id="quickInfoGroup"
                    layoutDirection="vert"
                    itemSpacings="[8]">

                    <!-- Address Card -->
                    <Rectangle
                        id="addressCard"
                        width="450"
                        height="80"
                        color="#1e2a4a"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="addressLabel"
                            translation="[15, 10]"
                            width="420"
                            maxLines="3"
                            wrap="true"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>

                    <!-- Phone Card -->
                    <Rectangle
                        id="phoneCard"
                        width="450"
                        height="45"
                        color="#1e2a4a"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="phoneLabel"
                            translation="[15, 12]"
                            width="420"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>

                    <!-- Hours Card -->
                    <Rectangle
                        id="hoursCard"
                        width="450"
                        height="70"
                        color="#1e2a4a"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="hoursLabel"
                            translation="[15, 10]"
                            width="420"
                            maxLines="3"
                            wrap="true"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>

                    <!-- Distance Card -->
                    <Rectangle
                        id="distanceCard"
                        width="450"
                        height="45"
                        color="#1e2a4a"
                        cornerRadius="8"
                        visible="false">
                        <Label
                            id="distanceLabel"
                            translation="[15, 12]"
                            width="420"
                            font="font:SmallSystemFont"
                            color="#cccccc" />
                    </Rectangle>
                </LayoutGroup>
            </LayoutGroup>

            <!-- Right Column: Title, Description, Details -->
            <LayoutGroup
                id="rightColumn"
                layoutDirection="vert"
                itemSpacings="[12]">

                <!-- Title -->
                <Label
                    id="detailTitle"
                    width="1200"
                    maxLines="2"
                    wrap="true"
                    font="font:LargeBoldSystemFont"
                    color="#e94560" />

                <!-- Short Description -->
                <Label
                    id="shortDescription"
                    width="1200"
                    maxLines="3"
                    wrap="true"
                    font="font:MediumSystemFont"
                    color="#ffffff" />

                <!-- Price/Rating Row -->
                <LayoutGroup
                    id="metaRow"
                    layoutDirection="horiz"
                    itemSpacings="[30]">

                    <Label
                        id="priceLabel"
                        font="font:SmallBoldSystemFont"
                        color="#4ade80"
                        visible="false" />

                    <Label
                        id="ratingLabel"
                        font="font:SmallBoldSystemFont"
                        color="#fbbf24"
                        visible="false" />

                    <Label
                        id="reservationLabel"
                        font="font:SmallSystemFont"
                        color="#f87171"
                        visible="false" />
                </LayoutGroup>

                <!-- Divider -->
                <Rectangle
                    id="divider"
                    width="1200"
                    height="1"
                    color="#333333" />

                <!-- Full Description -->
                <Label
                    id="fullDescription"
                    width="1200"
                    maxLines="8"
                    font="font:SmallSystemFont"
                    color="#cccccc"
                    wrap="true" />

                <!-- Tips Section -->
                <Rectangle
                    id="tipsCard"
                    width="1200"
                    height="90"
                    color="#1a3a2e"
                    cornerRadius="8"
                    visible="false">
                    <Label
                        id="tipsLabel"
                        translation="[15, 12]"
                        width="1170"
                        maxLines="4"
                        wrap="true"
                        font="font:SmallSystemFont"
                        color="#a7f3d0" />
                </Rectangle>

                <!-- Tags -->
                <Label
                    id="tagsLabel"
                    width="1200"
                    maxLines="2"
                    wrap="true"
                    font="font:SmallestSystemFont"
                    color="#666666"
                    visible="false" />

                <!-- Extended Details - appears right after other content -->
                <Rectangle
                    id="bottomSection"
                    width="1200"
                    height="300"
                    color="#1e2a4a"
                    cornerRadius="8"
                    visible="false">
                    <Label
                        id="extendedDetails"
                        translation="[20, 15]"
                        width="1160"
                        maxLines="15"
                        wrap="true"
                        font="font:MediumSystemFont"
                        color="#cccccc" />
                </Rectangle>
            </LayoutGroup>
        </LayoutGroup>
    </children>
</component>
